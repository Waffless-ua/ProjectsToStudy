<Window x:Class="ArcadeGameWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcadeGameWPF"
        
        xmlns:view="clr-namespace:ArcadeGameWPF.Views"
        xmlns:viewmodel="clr-namespace:ArcadeGameWPF.ViewModels"
        Title="ArcadeGame"
        Background="Black">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:GameEnvironmentViewModel}">
            <view:GameEnvironment/>
        </DataTemplate>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Viewbox>
</Window>
